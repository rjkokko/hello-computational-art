{
  "name": "hello-computatinal-art",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "watch:ts": "tsc -w",
    "serve": "serve .",
    "dev": "concurrently -p \"[{name}]\" -n \"TS,SERVE\" -c \"bgBlue.bold,bgYellow.bold\" \"yarn run watch:ts\" \"yarn run serve\""
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "serve": "^11.0.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "babylonjs": "^4.0.3"
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "proseWrap": "always"
  }
}
